const { url } = Astro;

function anchorProps(path: string) {
  let { pathname } = url;
  // if (pathname.endsWith('.html')) {
  //   pathname = pathname.slice(0, -5);
  // }
  // if (pathname.endsWith('translations-item')) {
  //   pathname = pathname.slice(0, -5);
  // }
  if (pathname.search('scene') > 0) {
    path = path.replace('./', '../')
  }
  
  return {
    'href': path,
    'aria-current': new URL(path, url).pathname === pathname,
  };
}
